while cubalagia != 1:
    print("|| SISTEM PENGIRAAN MARKAH PEPERIKSAAN TINGKATAN 3 SMJK NAN HWA||")
    time.sleep(0.2)
    print("|| MASUKKAN MARKAH ANDA:||")  # Pengunna masukkan markah
    markah = int(input(": "))
    for i in range(0, (random.randint(0, 6))):
        print('Sedang memproses markah (att.',i, ')')
        time.sleep(1)
    print("Markah anda telah diproses") # Markah diproses untuk mencari kelas
    time.sleep(0.7)
    if markah >= 0 and markah < 101:
     if markah < 40:
        kelas = str("4SE")
     elif markah < 60:
        kelas = str('4SD')
     elif markah < 70:
        kelas = str('4SC')
     elif markah < 80:
        kelas = str('4SB')
     else:
        kelas = str('4SA')
     print("Kelas yang anda dapat ialah:", kelas) # paparan output kelas

    else:
        print("Markah tidak sah. Julat markah seharusnya dalam linkungan 0-100. Markah yang diinputi oleh anda:", markah) # markah tidak sah diberikan amaran
    
    print('|| Adakah anda ingin mencuba semula? (Ya atau Tidak) ||') # tanya pengunna jika ingin mencuba lagi
    cubalagi = str(input(": ")).lower()
    if cubalagi == ("ya"):
        cubalagia = 0
    else:
        cubalagia = 1

print("Terima kasih kerana menggunakan program ini")
time.sleep(1)
print("""
