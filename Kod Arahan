| | |_/ / |__ |  \| | |  \/ | | | |_/ / /_\ \/ /_\ \|  \| | | .  . |/ /_\ \| |_/ / |/ / / /_\ \| |_| | | |_/ / |__ | |_/ / |__ | |_/ / | | | |/ / \ `--./ /_\ \/ /_\ \|  \| |
| |  __/|  __|| . ` | | __  | | |    /|  _  ||  _  || . ` | | |\/| ||  _  ||    /|    \ |  _  ||  _  | |  __/|  __||  __/|  __||    /  | | |    \  `--. \  _  ||  _  || . ` |
